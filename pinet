    ltsp-chroot --arch armhf apt-get -y autoremove
    NBDRun
    whiptail --title $"Epoptes" --msgbox $"Epoptes has been removed from the pi image" 16 78
    Menu
    ;;
    *)
    Menu
    ;;

esac
}

